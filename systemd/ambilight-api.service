[Unit]
Description=Ambilight API (FastAPI)
After=network.target ambilight-led.service

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/ambilight/python
ExecStart=/home/pi/ambilight/python/.venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
